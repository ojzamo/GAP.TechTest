@model GAP.TechTest.Web.MVC.Models.IndexModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="card">
    <div class="card-header border-transparent">
        <h3 class="card-title">Polizas</h3>
        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <!-- /.card-header -->
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table m-0">
                <thead>
                    <tr>
                        <th>Action</th>
                        <th>Nombre</th>
                        <th>Tipo</th>
                        <th>Periodo (meses)</th>
                        <th>Precio</th>
                        <th>Riesgo</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.InsurancePolicyList)
                    {
                    <tr>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Home", new { item.Id }, null) |
                            @Html.ActionLink("Remove", "Remove", "Home", new { item.Id }, null) |
                            @Html.ActionLink("Assign", "Assign", "Home", new { item.Id }, null)
                        </td>
                        <td>@item.Name</td>
                        <td>@item.CoverageType.Name - @item.CoverageType.Percent</td>
                        <td>@item.Period</td>
                        <td>@item.Price</td>
                        <td>@item.RiskType</td>
                    </tr>
                    }
                    </tbody>
            </table>
        </div>
        <!-- /.table-responsive -->
    </div>
    <!-- /.card-body -->
    <div class="card-footer clearfix">
        @Html.ActionLink("Crear Poliza", "New", "Home", null, new { @class="btn btn-sm btn-info float-left"})
        @Html.ActionLink("Asignar a Persona", "New", "Home", null, new { @class="btn btn-sm btn-secondary float-right"})
        
    </div>
    <!-- /.card-footer -->
</div>
